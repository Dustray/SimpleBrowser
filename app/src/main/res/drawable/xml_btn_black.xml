<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" ><shape android:shape="rectangle">
        <corners android:radius="100dp" />

        <solid android:color="#303030" />

        <stroke android:dashGap="0dp" android:width="1dp" android:color="#303030" />
    </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
        <corners android:radius="100dp" />
        <solid android:color="#202020" />

        <stroke android:dashGap="0dp" android:width="1dp" android:color="#202020" />
    </shape></item>

</selector>