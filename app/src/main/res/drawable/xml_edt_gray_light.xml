<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <corners android:radius="20dp" />

            <solid android:color="#f0f0f0" />

            <stroke android:dashGap="0dp" android:width="1dp" android:color="#c0c0c0" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#a0a0a0" />

            <stroke android:dashGap="0dp" android:width="1dp" android:color="#a0a0a0" />
        </shape></item>

</selector>