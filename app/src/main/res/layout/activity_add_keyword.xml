<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_keyword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dustray.simplebrowser.AddKeywordActivity">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/action_bar_shadow"
        android:translationZ="@dimen/action_bar_shadow"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/keyword_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/xml_btn_white"
            android:hint="关键字为域名的关键部分"
            android:imeOptions="actionGo"
            android:paddingLeft="15dp"
            android:paddingRight="75dp"
            android:singleLine="true"
            android:textColorHint="@color/grayText"
            android:textCursorDrawable="@drawable/xml_sharp_accent" />

        <Button
            android:id="@+id/add_keyword_btn"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/xml_btn_color_accent"
            android:text="添加"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_keyword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_1">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
